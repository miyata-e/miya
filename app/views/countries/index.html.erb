<h1>Listing countries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Area</th>
      <th>Population</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="test">
    <% @countries.each do |country| %>
      <tr>
        <td><%= country.name %></td>
        <td><%= country.area %></td>
        <%# if country.population > 100 %>
        <% if country.population && country.population > 100 %>
          <td id="plus"><%= country.population %></td>
        <% else %>
          <td id="minus"><%= country.population %></td>
        <% end %>
        <td><%= link_to 'Show', country %></td>
        <td><%= link_to 'Edit', edit_country_path(country) %></td>
        <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

